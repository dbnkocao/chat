<div class="navbar-fixed">
  <ul id="dropdown1" class="dropdown-content">
    <% current_user.my_teams.each do |team| %>
      <li><a href="/teams/<%= team.slug %>"><%= team.slug %></a></li>
      <li class="divider"></li>
    <% end %>
    <li>
      <a class="" href="#" onclick="open_modal('add_team_modal');">+ Add Team</a>
    </li>
  </ul>
  <nav>
    <div class="nav-wrapper col s12">
      <a href="/" class="brand-logo"><i class="material-icons">chat_bubble_outline</i>Chat</a>
      <a href="#" data-target="nav-chat" class="sidenav-trigger"><i class="material-icons">menu</i></a>
      <ul id="nav-mobile" class="right hide-on-med-and-down">
        <% if current_user %>
          <li><a href="/users/edit">Profile</a></li>
          <li><a class="dropdown-trigger" href="#!" data-target="dropdown1">My Teams<i class="material-icons right">arrow_drop_down</i></a></li>
          <li>  <%= link_to("Logout", destroy_user_session_path, :method => :delete) %></li>
        <% else %>
          <li><a href="/users/sign_in">Login</a></li>
          <li><a href="/users/sign_up">Sign Up</a></li>
        <% end %>
      </ul>
    </div>
  </nav>
</div>
