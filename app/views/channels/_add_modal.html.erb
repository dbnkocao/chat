<div id="add_channel_modal" class="modal">
  <div class="modal-content">
    <div class="row">
        <%= form_tag(controller: "channels", action: "create", method: "create") do %>
        <div class="row">
          <div class="col s12">
            <h4>Add a Channel</h4>
          </div>
          <div class="input-field col s12">
            <%= hidden_field(:channel, :team_id, value: @team.try(:id)) %>
            <%= text_field(:channel, :slug) %>
            <%= label_tag(:email, "Channel Name") %>
            <%= submit_tag("Add Channel", class: "btn right") %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>